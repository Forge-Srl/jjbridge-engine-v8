<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>jjbridge</groupId>
    <artifactId>jjbridge-v8</artifactId>
    <version>1.0</version>

    <name>JJBridge V8</name>
    <description>A JJBridge library bundled with V8 JavaScript Engine</description>

    <packaging>pom</packaging>

    <properties>
        <maven.compiler.source>1.8</maven.compiler.source>
        <maven.compiler.target>1.8</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <profiles>
        <profile>
            <id>Windows build environment</id>
            <activation>
                <os>
                    <family>windows</family>
                </os>
            </activation>
            <properties>
                <script.toExecute>./build_v8_JNI.ps1</script.toExecute>
                <script.executor>powershell.exe</script.executor>
                <jniPath>${project.basedir}/windows/jni/x86_64</jniPath>
            </properties>
        </profile>
        <profile>
            <id>Linux build environment</id>
            <activation>
                <os>
                    <family>unix</family>
                </os>
            </activation>
            <properties>
                <script.toExecute>./build_v8_JNI.sh</script.toExecute>
                <script.executor>bash</script.executor>
                <jniPath>${project.basedir}/linux/jni/x86_64</jniPath>
            </properties>
        </profile>
        <profile>
            <id>macOS build environment</id>
            <activation>
                <os>
                    <family>mac</family>
                </os>
            </activation>
            <properties>
                <script.toExecute>___TODO___</script.toExecute>
                <script.executor>___TODO___</script.executor>
                <jniPath>${project.basedir}/macos/jni/x86_64</jniPath>
            </properties>
        </profile>
        <profile>
            <id>Common</id>
            <activation>
                <property>
                    <name>!unsetDefaultProfile</name>
                </property>
            </activation>

            <build>
                <defaultGoal>compile:nativeDeps</defaultGoal>
                <plugins>
                    <plugin>
                        <groupId>org.codehaus.mojo</groupId>
                        <artifactId>exec-maven-plugin</artifactId>
                        <version>1.6.0</version>
                        <executions>
                            <execution>
                                <id>default-cli</id>
                                <goals>
                                    <goal>exec</goal>
                                </goals>
                                <phase>compile</phase>
                                <configuration>
                                    <executable>${script.executor}</executable>
                                    <commandlineArgs>${script.toExecute}</commandlineArgs>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

    <modules>
        <module>core</module>
        <module>android</module>
        <module>linux</module>
        <module>macos</module>
        <module>windows</module>
    </modules>
</project>